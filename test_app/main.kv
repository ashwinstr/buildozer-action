MainWidget:

<MainWidget>:
    orientation: 'vertical'
    Widget:
        id: wid
        color: 1, 1, 1, 0
        canvas.before:
            Rectangle:
                pos: root.pos
                size: root.size
        Label:
            pos: wid.pos
            size: wid.width, wid.height
            color: 0, 0, 0, 1
            text: root.total
            font_name: "resources/digital-7.ttf"
            font_size: 80
    TextInput:
        id: input
        halign: 'center'
        input_filter: 'int'
        size_hint: 1, 1/2
        text: ""
        font_size: 20
        multiline: False
        on_text_validate: root.add_number(input)
    BoxLayout:
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "*"
                    color: 1, 1, 1, 1
                    font_size: 25
                    on_press: root.mult_number(input)
                Button:
                    text: "/"
                    color: 1, 1, 1, 1
                    font_size: 25
                    on_press: root.div_number(input)
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "+"
                    color: 1, 1, 1, 1
                    font_size: 25
                    on_press: root.add_number(input)
                Button:
                    text: "-"
                    color: 1, 1, 1, 1
                    font_size: 25
                    on_press: root.sub_number(input)
        Button:
            text: "AC"
            font_size: 25
            color: 1, 1, 1, 1
            on_press: root.clear()
