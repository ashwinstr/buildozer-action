MainWidget:

#:set btn_font_h 30

<MainWidget>:
    orientation: 'vertical'
    FloatingButtons:
        size_hint: 0.3333, 0.1
    Label:
        id: total_ans
        color: 0, 0, 0, 1
        text: root.total
        halign: 'center'
        font_name: "resources/digital-7.ttf"
        font_size: sp(80)
        size_hint: 1, 1/3 - 0.1
    Label:
        text: root.equation
        size: self.texture_size
        text_size: root.width - 10, None
        halign: 'center'
        color: 0, 0, 0, 0.75
        font_size: sp(30)
        size_hint: 1, 1/3
    ComputeBox:
        size_hint: 1, 1/2
        BoxLayout:
            orientation: 'vertical'
            size_hint: 3/5, 1
            NumButtons:
                id: num_buttons
        BoxLayout:
            orientation: 'vertical'
            size_hint: 2/5, 1
            padding: dp(10)
            spacing: dp(10)
            MathButtons:
                id: math_buttons
